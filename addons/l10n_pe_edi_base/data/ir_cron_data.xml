<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ir_cron_send_invoices" model="ir.cron">
        <field name="name">Invoices: Send to PSE/OSE</field>
        <field name="model_id" ref="l10n_pe_edi_base.model_l10n_pe_edi_request" />
        <field name="interval_number">20</field>
        <field name="interval_type">minutes</field>
        <field name="state">code</field>
        <field name="code">model.cron_send_documents()</field>
    </record>
    <record id="ir_cron_verify_documents_per_day" model="ir.cron">
        <field name="name">Verify electronic documents per day</field>
        <field name="model_id" ref="l10n_pe_edi_base.model_l10n_pe_edi_request" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="state">code</field>
        <field name="code">model.cron_check_documents()</field>
    </record>
    <!-- Cron: actualizar flag Enterprise EDI -->
    <record id="ir_cron_update_enterprise_edi_flag" model="ir.cron">
        <field name="name">[PE EDI] Update Enterprise EDI Installed Flag</field>
        <field name="model_id" ref="l10n_pe_edi_base.model_res_company"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_enterprise_edi_flag()</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
    </record>

    <!-- Cron: actualizar flag POS EDI -->
    <record id="ir_cron_update_pos_edi_flag" model="ir.cron">
        <field name="name">[PE EDI] Update POS EDI Installed Flag</field>
        <field name="model_id" ref="l10n_pe_edi_base.model_res_company"/>
        <field name="state">code</field>
        <field name="code">model._cron_update_pos_edi_flag()</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
    </record>
</odoo>
