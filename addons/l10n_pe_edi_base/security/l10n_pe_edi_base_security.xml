<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Regla para l10n_pe_edi.request -->
        <record id="rule_l10n_pe_edi_request_company" model="ir.rule">
            <field name="name">EDI Request: Multi-company rule</field>
            <field name="model_id" ref="model_l10n_pe_edi_request"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Regla para l10n_pe_edi.shop -->
        <record id="rule_l10n_pe_edi_shop_company" model="ir.rule">
            <field name="name">EDI Shop: Multi-company rule</field>
            <field name="model_id" ref="model_l10n_pe_edi_shop"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>