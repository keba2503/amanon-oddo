<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_invoice_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <style>
                .card, .card .card-body, .card .card-header{
                    background-color: transparent !important;
                    border: none;
                }
                .table td{
                    padding: 0.3rem 0.4rem !important;
                }
            </style>
            <div id="invoice_header" class="row clearfix invoice_main" style="font-size: 0.75rem">
                <div class="offset-col-9 col-9">
                    <div class="card" style="border: none; background-color:None">
                        <div class="card-header p-2">
                            <strong
                                t-att-style="'color: %s;' % o.company_id.secondary_color or 'black'"
                            >CLIENT</strong>
                        </div>
                        <div class="card-body p-2">
                            <div class="row">
                                <div class="col-3">
                                    <strong
                                        t-esc="o.commercial_partner_id.l10n_latam_identification_type_id and o.commercial_partner_id.l10n_latam_identification_type_id.name or 'DOCUMENTO'"
                                    />
                                </div>
                                <div class="col-9">
                                    <span
                                        t-esc="o.commercial_partner_id.vat or '00000000'"
                                    />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>DENOMINATION</strong>
                                </div>
                                <div class="col-9">
                                    <span t-esc="o.commercial_partner_id.name" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>ADDRESS</strong>
                                </div>
                                <div class="col-9">
                                    <span
                                        t-esc="o._get_partner_address_odoofact(o.partner_id)"
                                    />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>INVOICE DATE</strong>
                                </div>
                                <div class="col-3">
                                    <span t-field="o.invoice_date" />
                                </div>
                                <div class="col-3">
                                    <strong>CURRENCY</strong>
                                </div>
                                <div class="col-3">
                                    <span t-esc="o.currency_id.currency_unit_label" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <strong>DUE DATE</strong>
                                </div>
                                <div class="col-9">
                                    <span t-field="o.invoice_date_due" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="informations" class="row mb-4 col-3">
                    <div class="text-center text-uppercase" >
                        <t t-if="o.state == 'cancel'">
                            <div class="ribbon-wrapper">
                                <div class="ribbon-odoofact">Canceled</div>
                            </div>
                        </t>
                        <div class="p-2">
                            <h6>
                                RUC:
                                <span t-field="o.company_id.partner_id.vat" />
                            </h6>
                            <h6>
                                <span
                                    t-esc="o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.report_name or 'NO VALID'"
                                />
                            </h6>
                            <h5
                                t-att-style="'color: %s;' % o.company_id.primary_color or 'black'"
                            >
                                <strong t-esc="o.name or 'NO VALID'" />
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
            <div id="invoice_body" class="page mt-2" style="font-size: 0.75rem">
                <table class="o_has_total_table table o_main_table table-borderless" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th name="th_quantity" class="text-end">
                                <strong>QTY</strong>
                            </th>
                            <th name="th_uom" class="text-start">
                                <strong>UoM</strong>
                            </th>
                            <th name="th_code" class="text-start">
                                <strong>CODE</strong>
                            </th>
                            <th name="th_description" class="text-start">
                                <strong>DESCRIPTION</strong>
                            </th>
                            <th name="th_value_unit" class="text-end">
                                <strong>V/U</strong>
                            </th>
                            <th name="th_price_unit" class="text-end">
                                <strong>P/U</strong>
                            </th>
                            <th name="th_subtotal" class="text-end">
                                <strong>SUBTOTAL</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="current_total" t-value="0"/>
                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                        <t t-foreach="lines" t-as="line">
                            <!-- <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/> -->

                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                            <t t-set="current_total" t-value="current_total + line.price_total"/>

                            <tr t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''"
                            >
                                <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                    <td name="td_quantity" class="text-end text-nowrap">
                                        <span t-field="line.quantity">1.00</span>
                                    </td>
                                    <td class="text-start">
                                        <span t-field="line.product_uom_id"  groups="uom.group_uom">units</span>
                                    </td>
                                    <td class="text-start">
                                        <span t-if="line.product_id" t-field="line.product_id.default_code">-</span>
                                    </td>
                                    <td name="account_invoice_line_name">
                                        <span t-if="line.name" t-esc="o._get_description_without_product_code(line.product_id, line.name)">Bacon Burger</span>
                                    </td>
                                    <td t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span t-field="line.l10n_pe_edi_price_unit_excluded" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">10.00</span>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.l10n_pe_edi_price_unit_included" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}">11.80</span>
                                    </td>
                                    <td name="td_subtotal" class="text-end o_price_total">
                                        <span class="text-nowrap" t-field="line.price_subtotal">10.00</span>
                                    </td>
                                </t>
                                <t t-elif="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}">A section title</span>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-elif="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name" t-options="{'widget': 'text'}">A note, whose content usually applies to the section or product above.</span>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                            t-out="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        >11.80</span>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
                <div>
                    <div id="right-elements" t-attf-class="#{'col-4' if report_type != 'html' else 'col-12 col-md-4'} ms-4 d-inline-block float-end">
                        <div id="total" class="clearfix row mt-n3">
                            <div class="ms-auto">
                                <table class="o_total_table table table-borderless avoid-page-break-inside">

                                    <!-- Tax totals summary (invoice currency) -->
                                    <t t-if="o.tax_totals" t-call="account.document_tax_totals">
                                        <t t-set="tax_totals" t-value="o.tax_totals"/>
                                        <t t-set="currency" t-value="o.currency_id"/>
                                    </t>

                                    <!--Payments-->
                                    <t t-if="print_with_payments">
                                        <t t-if="o.payment_state != 'invoicing_legacy'">
                                            <t t-set="payments_vals" t-value="o.sudo().invoice_payments_widget and o.sudo().invoice_payments_widget['content'] or []"/>
                                            <t t-foreach="payments_vals" t-as="payment_vals">
                                                <tr t-if="payment_vals['is_exchange'] == 0">
                                                    <td>
                                                        <i class="oe_form_field text-end oe_payment_label">Paid on <t t-out="payment_vals['date']" t-options='{"widget": "date"}'>2021-09-19</t></i>
                                                    </td>
                                                    <td class="text-end">
                                                        <span t-out="payment_vals['amount']" t-options='{"widget": "monetary", "display_currency": o.currency_id}'>20.00</span>
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-if="len(payments_vals) > 0">
                                                <tr class="fw-bold">
                                                    <td>Amount Due</td>
                                                    <td class="text-end">
                                                        <span t-field="o.amount_residual">11.05</span>
                                                    </td>
                                                </tr>
                                            </t>
                                        </t>
                                    </t>
                                </table>

                                <table class="table table-borderless avoid-page-break-inside">

                                    <tr class="border-black o_subtotal" t-if="o.l10n_pe_edi_amount_discount &gt; 0.0">
                                        <td>
                                            <strong>DISCOUNT</strong>
                                        </td>
                                        <td class="text-end">
                                            <span
                                                t-att-class="oe_subtotal_footer_separator"
                                                t-field="o.l10n_pe_edi_amount_discount"
                                            />
                                        </td>
                                    </tr>

                                    <tr class="border-black o_subtotal" t-if="o.l10n_pe_edi_amount_exonerated &gt; 0.0">
                                        <td>
                                            <strong>EXONERATED</strong>
                                        </td>
                                        <td class="text-end">
                                            <span
                                                t-att-class="oe_subtotal_footer_separator"
                                                t-field="o.l10n_pe_edi_amount_exonerated"
                                            />
                                        </td>
                                    </tr>
                                    <tr class="border-black o_subtotal" t-if="o.l10n_pe_edi_amount_unaffected &gt; 0.0">
                                        <td>
                                            <strong>UNAFFECTED</strong>
                                        </td>
                                        <td class="text-end">
                                            <span
                                                t-att-class="oe_subtotal_footer_separator"
                                                t-field="o.l10n_pe_edi_amount_unaffected"
                                            />
                                        </td>
                                    </tr>
                                    <tr class="border-black o_subtotal" t-if="o.l10n_pe_edi_amount_icbper &gt; 0.0">
                                        <td>
                                            <strong>ICBPER</strong>
                                        </td>
                                        <td class="text-end">
                                            <span
                                                t-att-class="oe_subtotal_footer_separator"
                                                t-field="o.l10n_pe_edi_amount_icbper"
                                            />
                                        </td>
                                    </tr>

                                    <tr t-if="o.l10n_pe_edi_detraction_type_id">
                                        <td>
                                            <strong>DETRACTION</strong>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="o.l10n_pe_edi_total_detraction" />
                                        </td>
                                    </tr>

                                    <tr t-if="o.l10n_pe_edi_retention_type_id">
                                        <td>
                                            <strong>RETENTION</strong>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="o.l10n_pe_edi_total_retention" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="mb-2">
                            <p class="text-end lh-sm" t-if="o.company_id.display_invoice_amount_total_words">
                                Total amount in words: <br/>
                                <small class="text-muted lh-sm"><span t-field="o.amount_total_words">Thirty one dollar and Five cents</span></small>
                            </p>
                        </div>

                        <!-- Tax totals summary (company currency) -->
                        <t t-if="o.tax_totals.get('display_in_company_currency')">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-call="account.document_tax_totals_company_currency_template"/>
                        </t>
                        <t t-else="">
                            <div class="oe_structure"/>
                        </t>
                    </div>
                </div>
            </div>
            <div id="invoice_footer" style="font-size: 0.75rem">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body p-2">
                                <div class="row" t-if="o.l10n_pe_edi_retention_type_id">
                                    <div class="col-12">
                                        <strong>
                                            OPERATION SUBJECT TO I.G.V. RETENTION RATE
                                            <span t-esc="o.l10n_pe_edi_retention_type_id.rate" />
                                            %
                                        </strong>
                                    </div>
                                </div>
                                <div class="row" t-if="o.l10n_pe_edi_detraction_type_id">
                                    <div class="col-12">
                                        <strong
                                        >OPERATION SUBJECT TO THE TAX OBLIGATIONS PAYMENT SYSTEM</strong>
                                    </div>
                                </div>
                                <div class="row" t-if="o.l10n_pe_edi_detraction_type_id">
                                    <div class="col-4">
                                        <strong>DETRACTION</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-field="o.l10n_pe_edi_detraction_type_id"/>
                                    </div>
                                </div>
                                <div
                                    class="row"
                                    t-if="o.l10n_pe_edi_detraction_type_id and o.company_id.l10n_pe_edi_detraction_bank_account_id"
                                >
                                    <div class="col-4">
                                        <strong>NATIONAL BANK ACC. N°</strong>
                                    </div>
                                    <div class="col-8">
                                        <span
                                            t-esc="o.company_id.l10n_pe_edi_detraction_bank_account_id.acc_number"
                                        />
                                    </div>
                                </div>
                                <div class="row" t-if="o.l10n_pe_edi_service_order">
                                    <div class="col-4">
                                        <strong>PURCHASE/SERVICE ORDER</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-field="o.l10n_pe_edi_service_order" />
                                    </div>
                                </div>
                                <t
                                    t-foreach="o.l10n_pe_edi_picking_number_ids"
                                    t-as="picking_number"
                                >
                                    <div class="row">
                                        <div class="col-4">
                                            <strong t-field="picking_number.type" />
                                        </div>
                                        <div class="col-8">
                                            <span t-field="picking_number.name" />
                                        </div>
                                    </div>
                                </t>
                                <div class="row" t-if="o.invoice_payment_term_id">
                                    <div class="col-4">
                                        <strong>PAYMENT TERMS</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-field="o.invoice_payment_term_id" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <strong>METHOD OF PAYMENT</strong>
                                    </div>
                                    <div class="col-8">
                                        <span
                                            t-esc="o.l10n_pe_edi_is_sale_credit and '[CRÉDITO POR PAGAR]' or '[CONTADO]'"
                                        />
                                    </div>
                                </div>
                                <div class="row" t-if="o.l10n_pe_edi_origin_move_id">
                                    <div class="col-4">
                                        <strong>DOCUMENT RELATED</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-esc="o.l10n_pe_edi_origin_move_id.l10n_latam_document_type_id.name" style="text-transform: uppercase;"/> - <span t-esc="o.l10n_pe_edi_origin_move_id.name" />
                                    </div>
                                </div>
                                <div t-if="o.l10n_pe_edi_amount_free &gt; 0.0" class="row">
                                    <div class="col-4">
                                        <strong>TYPE OF SALE</strong>
                                    </div>
                                    <div class="col-8">
                                        <span>FREE TRANSFER</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <strong>AMOUNT IN WORDS</strong>
                                    </div>
                                    <div class="col-8">
                                        <span t-esc="o._get_amount_in_words()" />
                                    </div>
                                </div>
                            </div>
                            <t t-if="o.l10n_pe_edi_is_sale_credit">
                                <div class="card-body p-2">
                                    <table class="o_has_total_table table table-sm table-borderless mb-2" name="invoice_dues_table">
                                        <thead>
                                            <tr>
                                                <th colspan="3" class="text-center"><strong>DUES</strong></th>
                                            </tr>                                            
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td name="th_dues_number" class="text-center fw-bold">NRO</td>
                                                <td name="th_dues_paid_date" class="text-center fw-bold">PAID DATE</td>
                                                <td name="th_dues_amount" class="text-center fw-bold">AMOUNT</td>
                                            </tr>
                                            <t t-set="dues" t-value="o.l10n_pe_edi_dues_ids.sorted(lambda l: l.dues_number)" />
                                            <t t-foreach="dues" t-as="due">
                                                <tr>
                                                    <td class="text-end"><span t-field="due.dues_number" /></td>
                                                    <td class="text-start"><span t-field="due.paid_date" /></td>
                                                    <td class="text-end o_price_total"><span t-field="due.amount" /></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
                <div class="card w-100" t-if="not is_html_empty(o.narration)">
                    <div class="card-body p-2">
                        <div class="w-100">
                            <strong>OBSERVATIONS</strong>
                        </div>
                        <div class="w-100">
                            <span t-field="o.narration" />
                        </div>
                    </div>
                </div>
                <div class="card w-100 avoid-page-break-inside" t-if="o.l10n_pe_edi_is_einvoice">
                    <div class="card-body p-2">
                        <div class="row">
                            <div class="col-10">
                                <p>
                                    Printed representation of the
                                    <strong>
                                        <span
                                            t-esc="o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.report_name or 'NO VALID'"
                                        />
                                        <span t-esc="o.name or 'NO VALID'" />
                                    </strong>
                                    , visit
                                    <strong>
                                        <span
                                            t-esc="o.company_id.l10n_pe_edi_ose_id and o.company_id.l10n_pe_edi_ose_id.control_url or 'NO VALID'"
                                        />
                                    </strong>
                                </p>
                                <p>
                                    <span
                                        t-esc="o.company_id.l10n_pe_edi_ose_id and o.company_id.l10n_pe_edi_ose_id.authorization_message or ''"
                                    />
                                </p>
                            </div>
                            <div class="col-2">
                                <img
                                    t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o._get_qr_code(), 100, 100)"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    <template id="report_invoice" inherit_id="account.report_invoice">
        <xpath expr='//t[@t-call="account.report_invoice_document"]' position="after">
            <t t-if="o._get_name_invoice_report() == 'l10n_pe_edi_odoofact.report_invoice_document'"
                t-call="l10n_pe_edi_odoofact.report_invoice_document"
                t-lang="lang"/>
        </xpath>
    </template>

    <!-- <template id="report_invoice_with_payments" inherit_id="account.report_invoice_with_payments"
    >
        <xpath
            expr='//t[@t-call="account.report_invoice_document"]'
            position="after"
        >
            <t
                t-if="o._get_name_invoice_report() == 'l10n_pe_edi_odoofact.report_invoice_document'"
                t-call="l10n_pe_edi_odoofact.report_invoice_document"
                t-lang="lang"
            />
        </xpath>
    </template> -->
</odoo>
